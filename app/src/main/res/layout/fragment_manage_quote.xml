<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/customer_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customer_view_button"
        android:onClick="View Quote"/>

    <Button
        android:id="@+id/customer_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customer_edit_button"
        android:onClick="Edit Quote"/>
</LinearLayout>