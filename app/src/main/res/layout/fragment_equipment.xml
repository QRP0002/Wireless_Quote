<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="0dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:paddingBottom="50dp"
            android:text="@string/equipment_text"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/equipment_spinner_1">
        </Spinner>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/equipment_spinner_2">
        </Spinner>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/equipment_spinner_3">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/previous_button_equipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/previous_equipment_information"
            android:onClick="previous"/>

        <Button
            android:id="@+id/save_equipment_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_equipment_information"
            android:onClick="save"/>
    </LinearLayout>
</LinearLayout>
